#!/usr/local/bin/bash

# Initial setup. Build up info from the options passed in
while getopts "d:f:b:" arg; do 
  case ${arg} in 
    d) dest="${OPTARG}" ;;
    f) from="${OPTARG}" ;;
    b) body="${OPTARG}" ;;
    *) exit 2 ;;
  esac
done 

# send out thye message
twilio api:core:messages:create \
  --to "${dest}" \
  --from "${from}" \
  --body "${body}"

