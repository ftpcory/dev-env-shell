#!/bin/bash

# install base packages
sudo apt update -y
sudo apt install -y \
  vim \
  git \
  curl \
  zip \
  unzip \
  lastpass-cli \
  pipenv \
  ca-certificates \
  gnupg \
  lsb-release 

# if we haven't already installe docker binaries, do it
[[ -f /usr/share/keyrings/docker-archive-keyring.gpg ]] || {
  curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg
  echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/ubuntu \
  $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
}

# if we haven't alread installed the twilio cli, do it
[[ -f /etc/apt/sources.list.d/twilio.list ]] || {
  wget -qO- https://twilio-cli-prod.s3.amazonaws.com/twilio_pub.asc | sudo apt-key add -
  sudo touch /etc/apt/sources.list.d/twilio.list
  echo 'deb https://twilio-cli-prod.s3.amazonaws.com/apt/ /' | sudo tee /etc/apt/sources.list.d/twilio.list
}

# install python packages 
pip install oathtool

# install the aws cli
[[ "$(which aws)" ]] || {
  curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
  unzip -o awscliv2.zip
  sudo ./aws/install
}

# install the docker compose plugin
curl -SL https://github.com/docker/compose/releases/download/v2.2.3/docker-compose-linux-x86_64 \
  -o "${HOME}/.docker/cli-plugins/docker-compose"

# install the twilio cli 
sudo apt update -y
sudo apt install -y \
  docker-ce-cli \
  twilio

