#!/usr/bin/env bash 

brew update 
brew tap twilio/brew
brew install \
  vim \
  git \
  curl \
  zip \
  unzip \
  lastpass-cli \
  oath-toolkit \
  awscli \
  twilio

# install the docker cli and compose plugin
wget https://download.docker.com/mac/static/stable/x86_64/docker-20.10.14.tgz
tar xzvf docker.20.10.14.tgz
cp docker/docker /usr/local/bin/docker 
mkdir -p "${HOME}/.docker/cli-plugins"
curl -SL https://github.com/docker/compose/releases/download/v2.2.3/docker-compose-linux-x86_64 \
  -o "${HOME}/.docker/cli-plugins/docker-compose"
chmod +x "${HOME}/.docker/cli-plugins/docker-compose"
